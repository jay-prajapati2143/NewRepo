<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "TopQuestion", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "TopQuestion", "Home")</li>
                    <li>@Html.ActionLink("Questions", "AllQuestoins", "Home")</li>
                    <li>@Html.ActionLink("Users", "AllUsers", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-lg-2 border-left visible-lg-block d-none">
            <ul class="nav">
    <li class="navbar-link">@Html.ActionLink("Home", "TopQuestion", "Home")</li>
    <li class="navbar-link">@Html.ActionLink("Questions", "AllQuestoins", "Home")</li>
    <li class="navbar-link">@Html.ActionLink("Users", "AllUsers", "Home")</li>
</ul>
                
        </div>
            <div class="col-lg-10">@RenderBody()</div>
        </div>
        
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
