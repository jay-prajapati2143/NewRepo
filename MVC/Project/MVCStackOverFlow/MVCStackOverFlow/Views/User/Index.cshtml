@model IEnumerable<MVCStackOverFlow.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<br />
<div class="row">
   @foreach(var user in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-6">
                    <div class="container-fluid ">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card table-bordered" style="width: 18rem;">
                                    <a href="@Url.Action("Details","User",new { id = user.UserID},null)"><img class="card-img-top" src="~/images/index.jpg" alt="Card image cap" width="100%"></a>
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(ModelItem => user.FullName)</h5>
                                    <p class="card-text">@Html.DisplayFor(ModelItem => user.Location)</p>
                                    <p>@Html.DisplayFor(ModelItem => user.ProfileViews)</p>
                                </div>
                            </div>
                                
                            
                            
                        </div>

                    </div>
                        <hr />
                </div>
                </div>
            }

</div>
